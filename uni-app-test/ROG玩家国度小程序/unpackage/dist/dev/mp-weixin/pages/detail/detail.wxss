.allDetail {
  background: #f7f7f7;
}
.allDetail .detail {
  -webkit-animation: fadeIn;
          animation: fadeIn;
  /* referring directly to the animation's @keyframe declaration */
  -webkit-animation-duration: 1s;
          animation-duration: 1s;
}
.allDetail .detail image {
  width: 100%;
  height: 300px;
  border-radius: 0;
}
.allDetail .all-detail {
  -webkit-animation: fadeInLeft;
          animation: fadeInLeft;
  /* referring directly to the animation's @keyframe declaration */
  -webkit-animation-duration: 1s;
          animation-duration: 1s;
  margin: 5px;
  padding: 20px;
  overflow: hidden;
  padding-bottom: 100px;
  background: #ffffff;
  position: relative;
  top: -40px;
  border-radius: 10px;
}
.allDetail .all-detail .put {
  font-size: 15px;
  margin-bottom: 20px;
  display: flex;
}
.allDetail .all-detail .put ._span {
  flex: 2;
  margin-top: 3px;
}
.allDetail .all-detail .put .van-rate {
  flex: 6;
  margin-right: 160px;
}
.allDetail .name-detail {
  display: flex;
}
.allDetail .detail-name {
  flex: 8;
  margin-top: 10px 0;
  font-size: 15px;
  color: #676a70;
  font-weight: 750;
}
.allDetail .detail-enname {
  margin: 20px 0;
  font-size: 10px;
  color: #bba8a4;
}
.allDetail .detail-price {
  margin-left: 10px;
  flex: 2;
  color: #0c34ba;
  font-size: 15px;
  font-weight: 750;
}
.allDetail .van-hairline--top {
  height: 0.4rem;
  margin: 10px;
}
.allDetail .specs {
  display: flex;
}
.allDetail .specs-detail {
  line-height: 30px;
  font-size: 15px;
  flex: 1;
  color: #646566;
}
.allDetail .choose-box {
  display: flex;
  width: 70px;
  flex: 4;
}
.allDetail .spece-choose {
  margin-bottom: 10px;
  border-radius: 15px;
  background: #e8e8e8;
  display: inline-block;
  height: 29px;
  width: 60px;
  margin-right: 15px;
  line-height: 29px;
  text-align: center;
  font-size: 13px;
}
.allDetail .active {
  background: #0c34ba;
  color: white;
}
.allDetail .num ._span {
  font-size: 15px;
}
.allDetail .numCount {
  overflow: hidden;
  float: right;
}
.allDetail .van-stepper--round .van-stepper__plus {
  color: #fff;
  background-color: blue;
}
.allDetail .van-stepper--round .van-stepper__minus {
  color: #c4cdee;
  background-color: #0c34ba;
  border: #7d7d7e;
}
.allDetail .text-detail {
  color: #7c6d7b;
  font-size: 15px;
}
.allDetail .desc {
  margin-top: 15px;
  color: #a4a2a4;
  font-size: smaller;
}
.allDetail .van-button__content {
  -webkit-animation: pulse;
          animation: pulse;
  /* referring directly to the animation's @keyframe declaration */
  -webkit-animation-duration: 1.7s;
          animation-duration: 1.7s;
  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
}

