.login {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(to right, #BAD4E3, white);
}
.login .nav-top {
  height: 50px;
  border-bottom: 1px solid gray;
  display: flex;
  justify-content: space-between;
  padding: 0 10px;
  align-items: center;
}
.login .nav-top ._img {
  width: 30px;
  height: 30px;
}
.login .nav-left {
  display: flex;
  align-items: center;
}
.login .nav-left ._span {
  font-size: 16px;
  font-weight: 500;
  color: #0c34ba;
}
.login .nav-right {
  -webkit-animation: swing;
          animation: swing;
  /* referring directly to the animation's @keyframe declaration */
  -webkit-animation-duration: 1.5s;
          animation-duration: 1.5s;
  -webkit-animation-iteration-count: infinite;
          animation-iteration-count: infinite;
  color: darkblue;
}
.login .van-button--round {
  background: #212770;
}
.login .van-button--primary {
  border: 1px solid grey;
}
.login .logo {
  text-align: center;
}
.login .logo ._img {
  width: 220px;
  height: 200px;
  border-radius: 50%;
  margin: 50px;
}
.login .forget-span {
  text-align: right;
  margin: 10px 20px 0 0;
  font-size: 13px;
  color: blueviolet;
}
.login .forget {
  text-align: right;
}
.login .forget-button {
  width: 92px;
}
.login .forget-button button {
  flex: 8;
  font-size: 10px;
  height: 30px;
  margin-top: 10px;
  margin-right: 15px;
}
.login .forget-get {
  display: flex;
}
.login .forget-get .van-field {
  flex: 8;
}
.login .forget-get .van-field__control {
  width: 154px;
}
.login .forget-get .van-field__label ._span {
  display: inline-block;
  padding-top: 3px;
  padding-left: 5px;
}
.login .forget-get .van-cell {
  line-height: 0.84rem;
  width: 85px;
}
.login .forget-get .van-cell__value {
  padding-top: 3px;
}
.login .forget-get .span {
  text-align: right;
  padding-right: 20px;
  margin-top: 10px;
}
.login .register-box {
  padding: 10px;
}
.login .register-box ._h1 {
  font-size: 26px;
  margin-left: 26px;
  margin-bottom: 22px;
  margin-top: 22px;
}
.login .forget-box {
  padding: 10px 7px;
}
.login .forget-box ._h1 {
  font-size: 26px;
  margin-left: 13px;
}

