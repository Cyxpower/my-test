.my {
  background-color: #f7f7f7;
  height: 650px;
}
.my .myavatar {
  margin: 10px 0 0 10px;
}
.my .myavatar image {
  height: 80px;
  width: 80px;
  border-radius: 50%;
}
.my .bg {
  -webkit-animation: fadeInDown;
          animation: fadeInDown;
  /* referring directly to the animation's @keyframe declaration */
  -webkit-animation-duration: 0.75s;
          animation-duration: 0.75s;
}
.my .bg image {
  width: 100vw;
  height: 30vh;
}
.my .van-uploader {
  width: 100%;
}
.my .van-uploader .van-uploader__wrapper {
  width: 100%;
}
.my .van-uploader .van-uploader__wrapper .van-uploader__preview {
  width: 100%;
}
.my .van-uploader .van-uploader__wrapper .van-uploader__preview .van-image van-uploader__preview-image {
  width: 100%;
}
.my .mydata {
  -webkit-animation: fadeIn;
          animation: fadeIn;
  /* referring directly to the animation's @keyframe declaration */
  -webkit-animation-duration: 0.75s;
          animation-duration: 0.75s;
  width: 90%;
  background-color: white;
  margin: auto;
  position: absolute;
  top: 140px;
  left: 0;
  right: 0;
  opacity: 0.8;
  border-radius: 8px;
  padding-bottom: 15px;
}
.my .mydata .my-head {
  height: 130px;
  display: flex;
  justify-content: space-between;
}
.my .mydata .nickname {
  color: #0730ba;
  font-size: 20px;
  margin-top: 15px;
  font-weight: bolder;
}
.my .mydata .vip ._img {
  height: 20px;
  width: 35px;
  padding-top: 10px;
}
.my .mydata .desc {
  margin-right: 20px;
  color: #a0a4a4;
  font-size: 13px;
  margin-top: 5px;
  width: 200px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.my .mydata .link-item {
  display: flex;
  justify-content: space-between;
  font-size: 16px;
  color: #3b4653;
  margin: 0 15px;
}
.my .mydata .link-item .item-text {
  margin-bottom: 20px;
}
.my .mydata .link-item:nth-child(-n+4) {
  border-bottom: 1px solid #b8b7b7;
  margin-bottom: 12px;
}
.my .footer ._p {
  text-align: center;
  font-size: 12px;
  color: #b8b7b7;
  display: flow-root;
}
.my .footer .footer1 {
  padding-bottom: 70px;
}
.my .footer .footer2 {
  margin-top: 110px;
}
.my .logout {
  font-size: 25px;
}

